class Solution {
public:
    long long countSubarrays(vector<int>& nums, int mink, int maxk) {
        //initialize the values
       long long ans=0;
       int minkposition=-1;
       int maxkposition=-1;
       int culpritposition=-1;
       int n=nums.size();
       //start code 
       //start from first index 
       for(int i=0;i<n;i++){
        //check if the first element is culprit or not 
        if(nums[i]<mink || nums[i]>maxk){
            culpritposition=i;
        }
        //check if the element if mink or maxk 
        if(nums[i]==mink){
            minkposition=i;
        }
        if(nums[i]==maxk){
            maxkposition=i;
        }
        //now we have to find the ans in which the substring lies in between mink and maxk so,
        int smaller=min(maxkposition,minkposition);
        long long temp=smaller-culpritposition;
        ans+=temp<0 ? 0:temp;
       }
return ans;
    }
};
