class Solution {
public:
    int countCharacters(vector<string>& words, string chars) {
        //firstly you have to count the character in the chars 
       vector<int>charcount(26,0);
        for(auto &ch:chars){
           charcount[ch-'a']++;
        }
        //after stroring the freq of the character you have to match it with the words array 
        int result=0;
        for(string &word:words){
            vector<int>wordcount(26,0);
            for(char &ch:word){
                wordcount[ch-'a']++;

            }
            bool ok=true;
            for(int i=0;i<26;i++){
                if(  wordcount[i]>charcount[i]){
                    ok=false;
                    break;
                }
            }
            if(ok==true){
                result+=word.length();
            }
        }
return result;
        
    }
};
