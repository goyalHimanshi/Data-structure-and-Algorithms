class Solution {
public:
    vector<int> findWordsContaining(vector<string>& words, char x) {
       vector<int>res;
       int n=words.size();
       auto lambda=[&x](char ch){
        return ch==x;
       };
       for(int i=0;i<n;i++) {
        if(any_of(words[i].begin(),words[i].end(),lambda))
        res.push_back(i);
       

       }
        return res;
    }
};
