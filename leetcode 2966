class Solution {
public:
    vector<vector<int>> divideArray(vector<int>& nums, int k) {
        int n=nums.size();
        vector<vector<int>>result;
        //firsty you ahve to itrate the array to check if the difference between then is less than k so,firstly sort the array
        sort(begin(nums),end(nums));
        for(int i=0;i<n;i+=3){
            if(nums[i+2]-nums[i]>k){ //now check the difference 
                 return {};
            }
           
            result.push_back({nums[i],nums[i+1],nums[i+2]});
        }
        return result;
    }
};
