class Solution {
public:
    int findContentChildren(vector<int>& g, vector<int>& s) {
        //firstly sort the given cookies and greed to check if the greed satisfied by child or not
        sort(begin(g),end(g));
        sort(begin(s),end(s));
        int m=g.size();
        int n=s.size();
        int i=0;
        int j=0;
        while(i<m && j<n){
            if(s[j]>=g[i]){ //the given condition is satisfied 
            i++;

            }
            //if the condition is not satisfied then check if another one is 
            j++;
        }
        return i;
    }
};
