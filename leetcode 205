class Solution {
public:
    bool isIsomorphic(string s, string t) {
        //to check if the string is isomorphic you have to store or map both the value to check if they are connected or not 
        unordered_map<char,char>mp1;
           unordered_map<char,char>mp2;
           int n=s.length();
           //firstly take the character 
           for(int i=0;i<n;i++){
            char ch1=s[i];
            char ch2=t[i];
            //now check the both character in the map 
            if(mp1.find(ch1)!=mp1.end()&& mp1[ch1]!=ch2 ||mp2.find(ch2)!=mp2.end()&&mp2[ch2]!=ch1 ){
                return false;
            }
            //map the elements with each other 
           mp1[ch1]=ch2;
           mp2[ch2]=ch1;
        
           }
           return true;
           

        
    }
};
